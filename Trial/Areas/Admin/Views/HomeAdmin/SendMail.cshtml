<body>
    <div id="header">
        <!-- logo button  -->
        <a href="#" class="logo">Job Seeker</a>
        <!-- header - bar  -->
        <div class="nav mt-12" style="margin-right:0%">
            <ul class="sub-nav">
                <li><a href="#">Home</a></li>
                <li>
                    @{
                        var cur_user = (Trial.Models.user)HttpContext.Current.Session["User"];
                        if (cur_user != null)
                        {
                            string name = cur_user.email;
                            <a>@name.Split('@')[0]</a>
                        }
                    }
                </li>
                <li><a>@Html.ActionLink("Log out", "Logout", "User", new { area = "" }, null)</a></li>
            </ul>
        </div>
    </div>
    <!-- Clear -->
    <div class="clear"></div>
    <!-- CV - details -->
    <!-- Company Detail -->
    <div class="form-name">
        <p>Form Of Mail </p>
    </div>
    <div class="formCV">
        @using (Html.BeginForm())
        {
            <form>
                <h2>Create Mail: </h2>
                <label for="name">From: </label>
                <input type="text" id="name" value="CompanyEmail@gmail.com" required>
                <br>
                <label for="email">To: </label>
                <input type="text" id="email" name="toEmail" placeholder="To Email..." value="@ViewBag.Email" required>
                <br>
                <label for="education">Subject:</label>
                <input type="text" id="education" name="subject" placeholder="Subject......">
                <br>
                <label for="education">Title:</label>
                <input type="text" id="education" name="title" placeholder="Title......">
                <br>
                <label for="descip">Content:</label>
                <textarea class="form-control" id="descip" type="text" name="content" placeholder="Content..." data-sb-validations="required"></textarea>
                <br>
                <label for="education">Message:</label>
                <input type="text" id="education" name="message" placeholder="Message......">
                <br>
                <button class="mtn"><span>Send</span></button>

            </form>
        }

    </div>
    <!-- Footer -->
    <script src="~/Content/Applicant access/access/css/cvdetail/js/aos.js"></script>
