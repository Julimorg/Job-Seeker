@model Trial.Models.CV
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cv Details</title>
    <link rel="stylesheet" href="./access/css/cvdetail/responsive.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css" crossorigin="">
    <link rel="stylesheet" href="~/Content/Employeers access/access/css/cvdetail.css">
    <link rel="stylesheet" href="~/Content/Employeers access/access/css/cvdetail/aos.css">
    <link rel="stylesheet" href="~/Content/Employeers access/access/css/cvdetail/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Employeers access/access/css/cvdetail/responsive.css">
    <link rel="stylesheet" href="./access/font/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@500&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Koulen&family=League+Spartan&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fugaz+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Chathura:wght@800&display=swap" rel="stylesheet">
    <link rel="icon" href="/image/logo_snkhead.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Content/adminStyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@500&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Koulen&family=League+Spartan&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fugaz+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Chathura:wght@800&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>
</head>
<body>
    <div id="header">
        <!-- logo button  -->
        <a href="#" class="logo">Job Seeker</a>
        <!-- header - bar  -->
        <div class="nav mt-12" style="margin-right:0%">
            <ul class="sub-nav">
                <li><a href="#">Home</a></li>
                <li>
                    @{
                        var cur_user = (Trial.Models.user)HttpContext.Current.Session["User"];
                        if (cur_user != null)
                        {
                            string name = cur_user.email;
                            <a>@name.Split('@')[0]</a>
                        }
                    }
                </li>
                <li><a>@Html.ActionLink("Log out", "Logout", "User", new { area = "" }, null)</a></li>
            </ul>
        </div>
    </div>
    <!-- Clear -->
    <div class="clear"></div>
    <!-- CV - details -->
    <!-- Company Detail -->
    <div id="content">
        <div class="company-wrap">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="single-post">
                            <h2>@Model.CV_name</h2>
                            <div class="post-meta text-muted">
                                <span><i class="far fa-user"></i> @Model.applicant_name</span><span><i class="far fa-calendar"></i>@Model.date_upload</span>
                            </div>
                            <div class="post-contant">
                                <h3 class="company-name" style="border-bottom:1px solid #e7e7e7;">Basic information </h3>
                                <div class="form" style="border-bottom:1px solid #e7e7e7;">
                                    <p>Name: @Model.applicant_name</p>
                                    <p>Position: @Model.applied_position</p>
                                    <p>Location: @Model.location</p>
                                    <p>Status: @Model.status</p>
                                </div>
                                <!-- Button 2 -->
                                <div class="share">
                                    <button class="main-btn">@Html.ActionLink("Get PDF", "GetPDF", "HomeAdmin", new { @directory = Model.CV_file }, new { @style = "color: white" })</button>
                                </div>
                                <div class="line"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <script src="~/Content/Applicant access/access/css/cvdetail/js/aos.js"></script>
    <script src="~/Content/Applicant access/access/css/cvdetail/js/core/bootstrap.min.js"></script>
    <script src="~/Content/Applicant access/access/css/cvdetail/js/core/jquery.3.2.1.min.js"></script>
    <script src="~/Content/Applicant access/access/css/cvdetail/js/core/popper.min.js"></script>
    <script src="~/Content/Applicant access/access/css/cvdetail/js/now-ui-kit.js"></script>
    <script src="~/Content/Applicant access/access/css/cvdetail/js/plugins/bootstrap-datepicker.js"></script>
    <script src="~/Content/Applicant access/access/css/cvdetail/js/plugins/bootstrap-switch.js"></script>
    <script src="~/Content/Applicant access/access/css/cvdetail/js/plugins/jquery.sharrre.js"></script>
    <script src="~/Content/Applicant access/access/css/cvdetail/js/plugins/nouislider.min.js"></script>
    <script src="~/Content/Applicant access/access/css/cvdetail/scripts/main.js"></script>
    <script src="~/Scripts/adminJS.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

