    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>
</head>
<body>
    <div id="header">
        <!-- logo button  -->
        <a href="#" class="logo">Job Seeker</a>
        <!-- header - bar  -->
        <div class="nav mt-12" style="margin-right: 0%">
            <ul class="sub-nav">
                <li><a href="#">Home</a></li>
                <li>
                    @{
                        var cur_user = (Trial.Models.user)HttpContext.Current.Session["User"];
                        if (cur_user != null)
                        {
                            string name = cur_user.email;
                            <a>@name.Split('@')[0]</a>
                        }
                    }
                </li>
                <li><a>@Html.ActionLink("Log out", "Logout", "User", new { area = "" }, null)</a></li>
            </ul>
        </div>
    </div>
    <div id="content">
        <div class="company-wrap">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="single-post">
                            <h2>@Model.company_name</h2>
                            <div class="post-meta text-muted">
                                <span><i class="far fa-user"></i> @Model.company_name</span><span><i class="far fa-calendar"></i>@Model.date_upload.ToShortDateString()</span>
                            </div>
                            <div class="post-contant">
                                <div class="post-img"><img src="@Model.company_images" alt=""></div>
                                <h6 style="font-size: 25px; border-top: 1px solid #e7e7e7;">Position:</h6>
                                <ul class="list-in-text">
                                    <li>@Model.hired_position</li>
                                </ul>
                                <p>@Model.position_des</p>
                                <p>Status: @Model.status</p>
                                @{
                                    if (Model.isOffered == 0)
                                    {
                                        <p>Offer: Opened</p>
                                    }
                                    else
                                    {
                                        <p>Offer: Closed</p>
                                    }

                                }
                                <!-- Button 2 -->
                                <div class="share" style="margin-top: 50px;">
                                    <button class="main-btn">@Html.ActionLink("Get PDF", "GetPDF", "HomeAdmin", new { @directory = Model.JD_file }, new { @style = "color: white" })</button>
                                </div>
                                <div class="line"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
