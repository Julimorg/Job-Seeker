                    -->
                </div>
            </div>
        </footer>
    </div>
    <script>
            $(document).ready(function () {

                $('#CV_file').click(function () {
                    console.log("You Click");
                    $('#CV_file').change(function () {
                        console.log("You change");
                        if (window.FormData !== undefined) {

                            var fileUpload = $('#CV_file').get(0);
                            var files = fileUpload.files;
                            var formData = new FormData();
                            formData.append("fileImage", files[0]);
                            //formData.append("fileImage", files[0]);
                            /*for (var i = 0; i < files.length; i++) {
                                formData.append("fileImage", files[i]);
                            }*/
                            $.ajax(
                                {
                                    type: 'POST',
                                    url: '/HomeApplicant/ProcessUpload',
                                    contentType: false,
                                    processData: false,
                                    data: formData,
                                    success: function (urlImage) {
                                        console.log(urlImage);
                                        $('#directory').attr('value', urlImage);
                                        $('#picture').val(urlImage);
                                    },
                                    error: function (err) {
                                        alert('Error ', err.statusText);
                                    }
                                });
                        }
                    });

                });

            });
    </script>
</body>
</html>


