                margin-left: 65px;
                margin-top: -10px;
                margin-bottom: -10px;
            }

                .pagination li {
                    padding: 0 7px;
                    margin-top: -2px;
                    border: none;
                    display: inline;
                    /*            background-color: #c3c3c3;*/
                }

                .pagination a:hover {
                    color: #b8b8b8;
                }

                .pagination a {
                    padding: 0;
                    font-size: 18px;
                    text-decoration: none;
                    color: black;
                    font-weight: 500;
                }
    </style>
    <!-- Footer -->
    <div id="FooterPage">
        <footer>
            <div class="container text-center text-md-left col-third">
                <div class="footer-wrap">
                    <div class="about">

